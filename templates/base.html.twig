<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue sur MyCollec
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>


	<body>

		<h1>
			<a href="accueil">MyCollec(Header)</a>
		</h1>

		{% if app.user %}

			{{app.user.firstname|capitalize}}
			{{app.user.lastname|capitalize}}
			|
			<a href="deconnexion">Se déconnecter</a>

			<br>

			<a href="ma-collec">Ma Collection</a>

			<br>

			<a href="enregistrer-jeu-video">Enregistrer un jeu video</a>

		{% else %}

			<a href="connexion">Se connecter</a>
			|
			<a href="inscription">S'inscrire</a>

		{% endif %}

		{% block body %}{% endblock %}
	</body>
</html></body></html>
